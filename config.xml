<?xml version='1.0' encoding='utf-8'?>
<widget id="com.beeva.beefound" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BeeFound</name>
    <description>
        BEEFound es una aplicación de búsquedas de empleados de la empresa Beeva.
    </description>
    <author email="beefound.team@beeva.com" href="http://www.beeva.com">
        BEEFOund Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreen" value="screen"/>
    <preference name="SplashScreenDelay" value="10000"/>
    <version>1.0.0</version>
    <icon src="res/android/icons/xhdpi.png" />

    <platform name="android">
        <allow-intent href="market:*" />

        <icon src="res/android/icons/ldpi.png" density="ldpi" />
        <icon src="res/android/icons/mdpi.png" density="mdpi" />
        <icon src="res/android/icons/hdpi.png" density="hdpi" />
        <icon src="res/android/icons/xhdpi.png" density="xhdpi" />

        <splash src="res/android/splashscreen/splash-land-hdpi.png" density="land-hdpi"/>
        <splash src="res/android/splashscreen/splash-land-ldpi.png" density="land-ldpi"/>
        <splash src="res/android/splashscreen/splash-land-mdpi.png" density="land-mdpi"/>
        <splash src="res/android/splashscreen/splash-land-xhdpi.png" density="land-xhdpi"/>
        <splash src="res/android/splashscreen/splash-port-hdpi.png" density="port-hdpi"/>
        <splash src="res/android/splashscreen/splash-port-ldpi.png" density="port-ldpi"/>
        <splash src="res/android/splashscreen/splash-port-mdpi.png" density="port-mdpi"/>
        <splash src="res/android/splashscreen/splash-port-xhdpi.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

        <icon src="res/ios/icons/icon-60@3x.png" width="180" height="180" />
        <icon src="res/ios/icons/icon-60.png" width="60" height="60" />
        <icon src="res/ios/icons/icon-60@2x.png" width="120" height="120" />
        <icon src="res/ios/icons/icon-76.png" width="76" height="76" />
        <icon src="res/ios/icons/icon-76@2x.png" width="152" height="152" />
        <icon src="res/ios/icons/icon-40.png" width="40" height="40" />
        <icon src="res/ios/icons/icon-40@2x.png" width="80" height="80" />
        <icon src="res/ios/icons/icon.png" width="57" height="57" />
        <icon src="res/ios/icons/icon@2x.png" width="114" height="114" />
        <icon src="res/ios/icons/icon-72.png" width="72" height="72" />
        <icon src="res/ios/icons/icon-72@2x.png" width="144" height="144" />
        <icon src="res/ios/icons/icon-small.png" width="29" height="29" />
        <icon src="res/ios/icons/icon-small@2x.png" width="58" height="58" />
        <icon src="res/ios/icons/icon-50.png" width="50" height="50" />
        <icon src="res/ios/icons/icon-50@2x.png" width="100" height="100" />

        <splash src="res/ios/splashscreen/Default~iphone.png" width="320" height="480"/>
        <splash src="res/ios/splashscreen/Default@2x~iphone.png" width="640" height="960"/>
        <splash src="res/ios/splashscreen/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="res/ios/splashscreen/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
        <splash src="res/ios/splashscreen/Default-Landscape~ipad.png" width="1024" height="768"/>
        <splash src="res/ios/splashscreen/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
        <splash src="res/ios/splashscreen/Default-568h@2x~iphone.png" width="640" height="1136"/>
        <splash src="res/ios/splashscreen/Default-667h.png" width="750" height="1334"/>
        <splash src="res/ios/splashscreen/Default-736h.png" width="1242" height="2208"/>
        <splash src="res/ios/splashscreen/Default-Landscape-736h.png" width="2208" height="1242"/>
    </platform>
</widget>
